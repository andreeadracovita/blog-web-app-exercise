<!DOCTYPE html>
<html lang="en">

<%- include("partials/header.ejs") %>

<main class="container">
	<h3 class="pb-4 mb-4 fst-italic border-bottom">
		What did you find out new today?
	</h3>

	<!-- fill value field with content from post to be edited -->
	<form method="post" action="/entries/<% if (locals.id) { %><%= id %><% } %>?_method=<% if (locals.id) { %>PUT<% } else { %>POST<% } %>">
		<div class="form-group mb-4">
			<label for="title">Title</label>
			<input type="text" class="form-control" id="title" name="title" 
				<% if (locals.id) { %> value=" <%= blogPosts[id].title %> " <% } %>
			>
		</div>
		<div class="form-group mb-4">
			<label for="shortDescription">Short description</label>
			<input type="text" class="form-control" id="shortDescription" name="shortDescription"
				<% if (locals.id) { %> value=" <%= blogPosts[id].shortDescription %> " <% } %>
			>
		</div>
		<div class="form-group mb-4">
			<label for="author">Author</label>
			<input type="text" class="form-control" id="author" name="author"
				<% if (locals.id) { %> value=" <%= blogPosts[id].author %> " readonly <% } %>
			>
		</div>
		<div class="form-group mb-4">
			<label for="category">Category</label>
			<select class="form-control form-control-sm" name="category"
				<% if (locals.id) { %> value=" <%= categories[blogPosts[id].category] %> " <% } %>
			>
				<% if (locals.categories) { %>
					<% for (let i = 0; i < categories.length; i++) { %>
						<option value="<%= i %>"
							<% if (locals.id && blogPosts[id].category === i) { %> selected="selected"> <% } %>
							<%= categories[i] %>
						</option>
					<% } %>
				<% } %>
			</select>
		</div>
		<div class="form-group mb-4">
			<label for="blogContent">Content</label>
			<textarea class="form-control" id="blogContent" name="blogContent" rows="3" <% if (!locals.id) { %> placeholder="What did you find out new today?" <% } %>>
				<% if (locals.id) { %> <%= blogPosts[id].text %> <% } %>
			</textarea>
		</div>
		<% if (locals.id) { %>
			<input type="submit" value="Finish edit" class="btn btn-outline-primary rounded-pill mb-4">
		<% } else { %>
			<input type="submit" value="Publish new post" class="btn btn-outline-primary rounded-pill mb-4">
		<% } %>
	</form>

	<% if (locals.id) { %>
		<form method="POST" action="/entries/<%= id %>?_method=DELETE">
	  		<input type="submit" value="Delete post" class="btn btn-outline-primary rounded-pill mb-4">
		</form>
	<% } %>
</main>

<%- include("partials/footer.ejs") %>